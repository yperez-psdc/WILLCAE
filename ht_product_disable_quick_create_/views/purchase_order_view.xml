<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="purchase_line_inherit_tree_view" model="ir.ui.view">
            <field name="name">purchase.line.inherit.tree.view</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
                <field name="arch" type="xml">
                    <xpath expr="//form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_id']"
                        position="attributes">
                        <attribute name="options">{"no_quick_create": True}</attribute>
                    </xpath>
                </field>
        </record>

        <record id="purchase_line_inherit_form_view" model="ir.ui.view">
            <field name="name">purchase.line.inherit.form.view</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
                <field name="arch" type="xml">
                    <xpath expr="//form/sheet/notebook/page/field[@name='order_line']/form/group/group/field[@name='product_id']"
                        position="attributes">
                        <attribute name="options">{"no_quick_create": True}</attribute>
                    </xpath>
                </field>
        </record>
    </data>
</odoo>