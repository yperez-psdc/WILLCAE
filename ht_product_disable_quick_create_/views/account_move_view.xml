<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="invoice_line_inherit_tree_view" model="ir.ui.view">
            <field name="name">invoice.line.inherit.tree.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
                <field name="arch" type="xml">
                    <xpath expr="//form/sheet/notebook/page/field[@name='invoice_line_ids']/tree/field[@name='product_id']"
                        position="attributes">
                        <attribute name="options">{"no_quick_create": True}</attribute>
                    </xpath>
                </field>
        </record>

        <record id="invoice_line_inherit_form_view" model="ir.ui.view">
            <field name="name">invoice.line.inherit.form.view</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
                <field name="arch" type="xml">
                    <xpath expr="//form/sheet/notebook/page/field[@name='invoice_line_ids']/form/sheet/group/field[@name='product_id']"
                        position="attributes">
                        <attribute name="options">{"no_quick_create": True}</attribute>
                    </xpath>
                </field>
        </record>
    </data>
</odoo>