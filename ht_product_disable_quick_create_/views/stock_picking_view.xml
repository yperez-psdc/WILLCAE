<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="stock_line_inherit_tree_view" model="ir.ui.view">
            <field name="name">stock.line.inherit.tree.view</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
                <field name="arch" type="xml">
                    <xpath expr="//form/sheet/notebook/page/field[@name='move_ids_without_package']/tree/field[@name='product_id']"
                        position="attributes">
                        <attribute name="options">{"no_quick_create": True}</attribute>
                    </xpath>
                </field>
        </record>

        <record id="stock_line_inherit_form_view" model="ir.ui.view">
            <field name="name">stock.line.inherit.form.view</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
                <field name="arch" type="xml">
                    <xpath expr="//form/sheet/notebook/page/field[@name='move_ids_without_package']/form/group/field[@name='product_id']"
                        position="attributes">
                        <attribute name="options">{"no_quick_create": True}</attribute>
                    </xpath>
                </field>
        </record>
    </data>
</odoo>
